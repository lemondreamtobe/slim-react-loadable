{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es5",
    "jsx": "react",
    "module": "esNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "removeComments": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "build",
    "lib": ["es6", "es7", "dom"],
    "baseUrl": "./client/",
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/asset/*": ["./asset/*"],
      "@/svg/*": ["./asset/svgs/*"],
      "@/styles/*": ["./asset/styles/*"],
      "@/images/*": ["./asset/images/*"],
      "@/components/*": ["./client/common/components/*"],
      "@/helpers/*": ["./client/common/helpers/*"],
      "@/homePage/*": ["./client/courseroom/page/homePage/*"],
      "@/client/*": ["./client/*"],
      "@/pages/*": ["./client/courseroom/page/homePage/pages/*"],
    },
    "types": ["node"],
    "skipLibCheck": true
  },
  "exclude": ["build", "node_modules"]
}
